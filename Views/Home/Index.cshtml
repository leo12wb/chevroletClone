@{
    ViewData["Title"] = "Lista de Carros";
}

<h2 class="text-center my-4" style="font-size: 20px;line-height: 1.5rem;">Bem-vindo ao site Ofertas Chevrolet! Digite a sua cidade e encontre as melhores ofertas da sua região.</h2>

<div class="container">
    <div class="row" id="carrosContainer"></div>
</div>

<script>
    async function carregarCarros() {
        const response = await fetch("/api/car");
        const carros = await response.json();
        const container = document.getElementById("carrosContainer");

        container.innerHTML = "";
        carros.forEach(carro => {
            container.innerHTML += `
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <h3 class="title" style="padding:5px;padding-left: 7px;background-color: #6E6E6E;">
                          <span style="color: #FFFFFF; font-family: Louis, Tahoma, sans-serif; font-weight: normal">
                              Taxa Zero
                          </span>
                        </h3>
                        <img src="${carro.img}" class="card-img-top" alt="${carro.name}">
                        <div class="card-body text-center">
                            <h5 class="card-title">${carro.name}</h5>
                            <hr>
                            <span style="color: #666;">Parcelas de</span>
                            <span style="color: #e6ac39;line-height: 50%;font-size: 1.8rem;">R$&nbsp;1.490</span>
                            <p class="card-text font-weight-bold" style="color: #666;">
                                Preço a vista a partir de <br>
                                R$ ${carro.price.toFixed(2)} <br> VÁLIDO NA TROCA DO USADO!
                            </p>
                            <br>
                            <a herf="#" target="_self"
                             style="background-color: transparent; border: 2px solid #b3842d; color: #262626;
                             padding: 13px;">
                                Solicitar contato
                            </a>
                            <br><br>
                        </div>
                    </div>
                </div>
            `;
        });
    }

    carregarCarros();
</script>

<link href="https://fonts.cdnfonts.com/css/louis" rel="stylesheet">
                
<style>
    body{
        font-family: Louis, Tahoma, sans-serif;
    }
    .title::before {
    background-image: url(data:image/svg+xml;base64,);
    background-size: 20px;
    background-position: center center;
    background-repeat: no-repeat;
    align-self: center;
    content: "";
    position: relative;
    right: 1px;
    top: 7px;
    display: inline-block;
    width: 26px;
    height: 30px;
    filter: invert(1);
 }
</style>
